<Window x:Class="FileCleanner.Windows.Extensions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FileCleanner.Windows"
        xmlns:commonClasses="clr-namespace:CommonClasses;assembly=CommonClasses"
        mc:Ignorable="d"
        Title="Extensions" Height="450" Width="800">
    
    <Window.Resources>
        <commonClasses:VideoExtensions x:Key="VideoExtensions"/>
        <commonClasses:AudioExtensions x:Key="AudioExtensions"/>
        <commonClasses:DocExtensions x:Key="DocExtensions"/>
        <commonClasses:CompressedExtensions x:Key="CompressedExtensions"/>
        <commonClasses:ImageExtensions x:Key="ImageExtensions"/>
        <commonClasses:ProjectExtensions x:Key="ProjectExtensions"/>
        <commonClasses:SystemExtensions x:Key="SystemExtensions"/>
    </Window.Resources>
    
    <StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            Text="Files to delete"
            FontSize="20"/>
        <Border
            Width="800"
            BorderThickness="1"
            BorderBrush="Black"/>
        <CheckBox
            Content="Video:"
            FontSize="12"
            IsChecked="{Binding AllChecked, Source={StaticResource VideoExtensions}, Mode=TwoWay}"
            Checked="AllVideoChecked"
            Unchecked="AllVideoChecked"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource VideoExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Width="750" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Margin=" 0 0 15 0"
                        Content="{Binding extension}"
                        IsChecked="{Binding Path=excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox
            Content="Audio:"
            FontSize="12"
            IsChecked="{Binding AllChecked, Source={StaticResource AudioExtensions}, Mode=TwoWay}"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource AudioExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Width="750" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Margin="0 0 15 0"
                        Content="{Binding extension}"
                        IsChecked="{Binding excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox
            Content="Image: "
            IsChecked="{Binding AllChecked, Source={StaticResource ImageExtensions}, Mode=TwoWay}"
            FontSize="12"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource ImageExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="750"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Margin="0 0 15 0"
                        Content="{Binding extension}"
                        IsChecked="{Binding excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox
            FontSize="12"
            Content="Documents:"
            IsChecked="{Binding AllChecked, Source={StaticResource DocExtensions}, Mode=TwoWay}"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource DocExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="750"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding extension}"
                        IsChecked="{Binding excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox
            FontSize="12"
            Content="Compressed:"
            IsChecked="{Binding AllChecked, Source={StaticResource CompressedExtensions}, Mode=TwoWay}"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource CompressedExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="750" Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding extension}"
                        IsChecked="{Binding excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox
            FontSize="12"
            Content="System:"
            IsChecked="{Binding AllChecked, Mode=TwoWay, Source={StaticResource SystemExtensions}}"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource SystemExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="750" HorizontalAlignment="Center" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding extension}"
                        IsChecked="{Binding excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox
            FontSize="12"
            Content="Project:"
            IsChecked="{Binding AllChecked, Source={StaticResource ProjectExtensions}, Mode=TwoWay}"/>
        <ListBox SelectionMode="Multiple" ItemsSource="{StaticResource ProjectExtensions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="750" Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox
                        Content="{Binding extension}"
                        IsChecked="{Binding excluded, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
